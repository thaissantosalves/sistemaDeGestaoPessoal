# Proteger arquivos sensíveis
<FilesMatch "\.(sql|log|ini|conf)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permitir acesso às imagens na pasta uploads
<Directory "uploads">
    Options -Indexes
    AllowOverride None
    Order allow,deny
    Allow from all
</Directory>

# Configurações de upload
php_value upload_max_filesize 10M
php_value post_max_size 10M

